{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,

    "outDir": "lib",
    "sourceMap": true,
    // linting
    "strict": false,
    "target": "es2017",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
